<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
<LinearLayout
    android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:orientation="vertical"

    >

<ImageView
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="80dp"
    android:src="@drawable/logo"
    android:layout_marginBottom="10dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginTop="1dp"
    android:layout_gravity="center"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"


    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:id="@+id/loginpersonimage"
        android:layout_marginTop="2dp"
        android:layout_centerVertical="false"
        android:src="@drawable/ic_baseline_person_24"/>


    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@android:color/black"
        android:layout_toRightOf="@+id/loginpersonimage"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="337dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/loginpersonimage"
        android:background="#fff"
        android:hint="Username"
        android:textColor="@android:color/holo_red_light" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:id="@+id/loginpersonimage2"
            android:layout_centerVertical="false"
            android:src="@drawable/ic_email"/>


        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@android:color/black"
            android:layout_toRightOf="@+id/loginpersonimage2"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="339dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/loginpersonimage1"
            android:background="#fff"
            android:hint="Email"
            android:inputType="textPassword"
            android:textColor="@android:color/holo_red_light" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="5dp"

    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:id="@+id/loginpersonimage1"
        android:layout_centerVertical="false"
        android:src="@drawable/okhoa"/>


    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@android:color/black"
        android:layout_toRightOf="@+id/loginpersonimage1"/>

    <EditText
        android:id="@+id/use"
        android:layout_width="339dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/loginpersonimage3"
        android:background="#fff"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/holo_red_light" />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:id="@+id/loginpersonimage3"
            android:layout_centerVertical="false"
            android:src="@drawable/okhoa"/>


        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@android:color/black"
            android:layout_toRightOf="@+id/loginpersonimage3"/>

        <EditText
            android:id="@+id/username1"
            android:layout_width="339dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/loginpersonimage1"
            android:background="#fff"
            android:hint="Comfirm Password"
            android:inputType="textPassword"
            android:textColor="@android:color/holo_red_light" />

    </LinearLayout>


<Button
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="SIGN UP"
    android:textColor="#ffff"
    android:background="@drawable/button_sign_up_2"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:id="@+id/gg"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
    <RadioButton

        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:id="@+id/dy"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"

            android:layout_toEndOf="@+id/dy"

            android:layout_toRightOf="@+id/dy"
            android:text="@string/dy"
            android:textColor="@android:color/black" /></RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:background="#365899"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="37dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/face"/>
        <Button
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN IN WITH FACEBOOK"
            android:textColor="#fff"
            android:background="#365899"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bt_gg"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/google"/>

        <TextView
            android:layout_width="270dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="0dp"
            android:background="#fff"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="SIGN IN WITH GOOGLE"
            android:textColor="@android:color/black" />

    </LinearLayout>


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_gravity="center"
    android:layout_marginTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/hah"
        android:textStyle="bold"
        android:text="Alreally have an Account "
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/hah"
        android:background="@drawable/button_sign_up"
        android:textColor="#1818F0"
        android:id="@+id/button_sign_in"
        android:layout_marginLeft="30dp"
        android:text="Sign in"/></RelativeLayout>


</LinearLayout>
</FrameLayout>